<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td></td>
        <td></td>
        <td><a class="show" href="/book">Show</a></td>
        <td><a class="edit" href="/book/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy" rel="nofollow" data-method="delete" href="/book">Destroy</a></td>
      </tr>
  </tbody>
</table>





<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
	<h4></h4>
  <%= f.submit 'Create Book' %>


  
<% end %>