<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  
  <tr><% @book.each do |book| %></tr>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show", book_path(book.id) %></th>
      <th><%= link_to "Edit", edit_book_path(book.id) %></th>
      <th><%= link_to "Destroy", book_path(book.id) , method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
    </tr>
  <%end%>
</table>





<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
	<h4></h4>
  <%= f.submit 'Create Book' %>


  
<% end %>