 <div class="notice">Book was successfully updated.</div>
</div>




<h1>Editing Book</h1>

<%= form_with model: @book, url: edit_book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <h4></h4>
  <%= f.submit 'Update Book' %>
  
  <h4></h4>
  <%= link_to "Show", books_path(@book.id) %>
  <%= link_to "Back", edit_book_path(@book.id) %>
  
<% end %>